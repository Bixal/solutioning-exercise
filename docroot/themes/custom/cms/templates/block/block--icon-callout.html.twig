{% set icon = content.field_icon|field_value is not empty ? content.field_icon.0['#taxonomy_term'].field_class.0.value %}

{% set classes = [
  'block',
  'ds-u-margin-top--2',
] %}

{% embed '@components/block/block.twig' with {
  'label': label is not empty ? label : false,
  'title_prefix': title_prefix,
  'title_suffix': title_suffix,
  'hide_content_wrapper': true
} %}

  {% block content %}
    {% include '@components/icon-callout/icon-callout.twig' with {
      'modifier': 'icon-callout--full',
      'icon': icon,
      'heading': content.field_heading|field_value,
      'teaser': content.field_teaser|field_value,
      'button': content.field_button
    } %}
  {% endblock %}

{% endembed %}
