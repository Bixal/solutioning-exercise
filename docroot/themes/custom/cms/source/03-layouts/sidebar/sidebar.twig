<div class="l-sidebar">

  {% if header %}
    <div class="l-sidebar__full">
      {% block header %}
        {{ header }}
      {% endblock %}
    </div>
  {% endif %}

  <div class="l-sidebar__main">
    {% block main %}
      {{ main }}
    {% endblock %}
  </div>

  {% if aside %}
    <aside class="l-sidebar__aside">
      {% block aside %}
        {{ aside }}
      {% endblock %}
    </aside>
  {% endif %}

  {% if footer %}
    <div class="l-sidebar__full">
      {% block footer %}
        {{ footer }}
      {% endblock %}
    </div>
  {% endif %}

</div>